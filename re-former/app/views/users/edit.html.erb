<%= form_for @user do |f| %>
  <div>
    <%= f.label :username, "Enter a username" %>
    <%= f.text_field :username, :value => "John Smith" %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, :placeholder => "email@user.com" %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit %>
<% end %>